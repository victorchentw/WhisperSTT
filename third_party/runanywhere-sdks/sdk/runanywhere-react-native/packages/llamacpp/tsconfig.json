      "@runanywhere/llamacpp": ["./src"],
      "@runanywhere/llamacpp/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"],
  "references": [
    { "path": "../core" }
  ]
}
